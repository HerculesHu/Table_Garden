<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fraghistory"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:background="@drawable/bt_shape_1"
            android:id="@+id/H"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:onClick="onClick_Event"
            android:text="发送"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="509dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginStart="86dp"
            android:layout_marginTop="75dp">

            <com.zucc.g3.hzy.myapplication.view.TimeView
                android:id="@+id/temperature_picker"
                android:layout_width="230dp"
                android:layout_height="230dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp">

            <com.zucc.g3.hzy.myapplication.view.TimeView
                android:id="@+id/soilhumidity_picker"
                android:layout_width="189dp"
                android:layout_height="186dp"
                android:layout_marginLeft="180dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zucc.g3.hzy.myapplication.view.TimeView
                android:id="@+id/humidity_picker"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>